		.rate-review
			// TRUYỂN DATA SỐ SAO ĐÁN VÀO ATTR "DATA-RATE" ĐỂ FILL MÀU
			.rating-input.rating-input--size-20px(data-rate="5")
				-for(i=0;i<5;i++)
					.star
						img.svg(src="./resources/icons/rate.svg", alt="rate")
			a.count-review(href="#") (Xem
				span 45
				| đánh giá) 
			p.count-sold
				span 1.8K
				| Đã bán
		.product__status.product__status--bottom
			h4.title-item-content Tình trạng:
			// all attr color: "out-of-stock" - "pre-order" - stocking
			p(status="out-of-stock") Hết hàng
			p(status="pre-order") Đặt trước
			p(status="stocking") Còn hàng
		.product__color.filter-select
			h4.title-item-content Màu sắc: 
				span.result
			.items-checkbox-selector.list-color
				label.item-color(style="--color:#ff0000")
					.checkbox__item
						input(name="product-color" type="radio" value="Red")
				label.item-color(style="--color:#f9ff00")
					.checkbox__item
						input(name="product-color" type="radio" value="Yellow")
				label.item-color(style="--color:#5f2007")
					.checkbox__item
						input(name="product-color" type="radio" value="Brown")
		.product__size.filter-select
			h4.title-item-content Kích thước
				a(href="#" data-fancybox data-src="#choose-size-guide") (Hướng dẫn chọn size):
				span.result
			.items-checkbox-selector.list-size
				label.item-size
					.checkbox__item
						input(name="prodcut-size" type="radio" value="XS")
						h5.name-size XS
				label.item-size
					.checkbox__item
						input(name="prodcut-size" type="radio" value="S")
						h5.name-size S
				label.item-size
					.checkbox__item
						input(name="prodcut-size" type="radio" value="M")
						h5.name-size M
				label.item-size
					.checkbox__item
						input(name="prodcut-size" type="radio" value="L")
						h5.name-size L
				label.item-size
					.checkbox__item
						input(name="prodcut-size" type="radio" value="XL")
						h5.name-size XL
		.product__price
			p.original-deal 36.400.000
				span đ
			p 18.200.000
				span đ
		.product__buttons
			h4.title-item-content Số lượng
			.list-button
				.item-button
					.product__quantity
						.minus -
						input.quantity(type="text" value="1" min="1" max="5")
						.plus +
				.item-button
					.btn.btn-primary.btn-normal
						.icon
							img(src="./resources/icons/cart.png", alt="cart")
						span Chọn mua
				.item-button
					.btn.btn-primary.btn-normal
						span Mua ngay
				.item-button
					.btn.btn-add-favorite
