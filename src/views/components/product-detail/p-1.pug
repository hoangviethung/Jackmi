.ProductDetailWrapper
	// BLOCK SLIDER IMAGES PRODUCTS
	section.SliderImagesProduct
		.SliderImagesProductWrapper
			.slider-thumbs-product-detail
				.swiper-container
					.swiper-wrapper
						.swiper-slide
							img.object-cover.fullsize(src=`./resources/images/filter/red.jpg`, alt="product-detail")
						.swiper-slide
							img.object-cover.fullsize(src=`./resources/images/filter/yellow.jpg`, alt="product-detail")
						.swiper-slide
							img.object-cover.fullsize(src=`./resources/images/filter/brown.jpg`, alt="product-detail")
			.slider-product-detail
				.swiper-container
					.swiper-prev.swiper-button
						span.lnr.lnr-chevron-left
					.swiper-next.swiper-button
						span.lnr.lnr-chevron-right
					.swiper-wrapper
						.swiper-slide(data-filter-color="Red")
							img.object-cover.fullsize(src=`./resources/images/filter/red.jpg`, alt="product-detail" data-filter-color="Red")
						.swiper-slide(data-filter-color="Yellow")
							img.object-cover.fullsize(src=`./resources/images/filter/yellow.jpg`, alt="product-detail" data-filter-color="Yellow")
						.swiper-slide(data-filter-color="Brown")
							img.object-cover.fullsize(src=`./resources/images/filter/brown.jpg`, alt="product-detail" data-filter-color="Brown")
	// PRODUCT CONTENT
	section.ProductContent
		//- .product-info-group.clearfix
		.product__status.product__status--top
			// all attr color: "out-of-stock" - "pre-order" - stocking
			p.new Hàng mới
			p.best-seller Bán chạy
			p.sale Giảm giá
