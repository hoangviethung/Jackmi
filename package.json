{
	"name": "frontend",
	"version": "1.0.0",
	"description": "webpack build",
	"main": "app.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "npm run dev",
		"dev": "webpack-dev-server --config core/webpack.config.js --env.NODE_ENV=development --mode=development --progress --open",
		"build": "rimraf dist && rimraf _dist && webpack --config core/webpack.config.js --env.NODE_ENV=development --mode=development --progress",
		"prod": "rimraf dist && rimraf _dist && webpack --config core/webpack.config.js --env.NODE_ENV=production --mode=production -p --progress  && npm run format",
		"format": "node core/format.js"
	},
	"keywords": [
		"webpack",
		"pug",
		"sass",
		"javascript"
	],
	"author": "sonvh2510",
	"license": "ISC",
	"prettier": {
		"useTabs": true,
		"tabWidth": 4,
		"semi": true,
		"singleQuote": true,
		"bracketSpacing": true,
		"trailingComma": "all",
		"printWidth": 80,
		"proseWrap": "never"
	},
	"devDependencies": {
