		"mini-css-extract-plugin": "^0.10.0",
		"node-sass": "^4.14.1",
		"postcss-cssnext": "^3.1.0",
		"postcss-import": "^12.0.1",
		"postcss-loader": "^3.0.0",
		"prettier": "^2.0.5",
		"pug": "^3.0.0",
